{
    "manifest_version": 3,
    "name": "Screenshot Extension",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "32": "images/icon-32.png",
      "128": "images/icon-128.png"
    }
  }
  